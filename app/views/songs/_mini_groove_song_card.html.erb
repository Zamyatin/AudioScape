<% method = :delete if local_assigns[:method].nil? %>
<% url = '#' if local_assigns[:url].nil? %>
<div class="songcard">
	<div class="coverart">
		<a href=<%= url %> class='song'>
			<% unless coverart == '' %>
				<i class="fa fa-play"></i><img src="http://images.gs-cdn.net/static/albums/<%= coverart %>" />
			<% else %>
				<img class="fa fa-play"></i><img class="searchart" src="http://static7.depositphotos.com/1001655/707/v/950/depositphotos_7070089-Woman-with-music-notes.jpg" />
			<%end%>
		</a>
	</div>
	<div class="songinfo">
		<div class="title"><%= title.truncate(25) %></div>
		<div class="artist"><%= artist.truncate(20) %></div>
	</div>
		<div class="icon">
			<% if method == :delete %>
				<i class="fa fa-trash-o">
					<%= link_to '', [@playlist, track], method: :delete, :class => "icon" %>
				</i>
			<% elsif method == :add %>
				<%= link_to playlist_songs_path(playlist_id: @playlist.id, song_name: title, song_artist: artist, song_id: track.id, coverart: coverart), method: :post, :class => 'add-song' do %>
				  <i class="fa fa-plus"></i>
					<% end %>
			<% end %>
		</div>
</div>

 